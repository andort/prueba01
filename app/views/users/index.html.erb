<div class="contenedor">
<h1>Listado de Usuarios</h1>

<table class="t_b">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Nro. Identidad</th>
      <th>Rol</th>
      <th>Img</th>
      <th>Compleaños</th>
      <th colspan="3">Opción</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="t_b">
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.name %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.lname %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.n_id %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.rol %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.img %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= user.b_day %></td>
        <td class="t_b" style="padding-right: 10px; padding-left: 10px;"><%= link_to 'Show', user %><%= link_to 'Edit', edit_user_path(user) %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path %>
</div>
